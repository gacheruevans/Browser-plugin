{
    "manifest_version" : 2,
    "name": "Photo Rater",
    "description": "Simple Photo rator plugin",
    "version": "1.0.0",

    "applications": {
        "gecko": {
            "id": "extensiontest@example.com",
            "strict_min_version": "48"
        }
    },
    
    "browser_action" : {
        "browser_style": true,
        "default_icon": {
            "32" : "./icon-plugin.svg"
        },
        "default_title": "Photo Rater",
        "default_popup": "./popup.html"
    },

    "content_scripts": [
        {
            "matches": [ "<all_urls>" ],
            "js": [ "content_script.js" ]
        }
    ],

    "permissions" : [
        "storage"
    ]
}
